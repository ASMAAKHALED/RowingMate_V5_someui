<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="#b3b3ff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_weight="1"

        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/background_light">
            <TextView
                android:text="00.00 m/s"
                android:gravity="center"
                android:textColor="#000066"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pace"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textSize="18sp" />
            <TextView
                android:text="pace"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#000066"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_pace"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/background_light">


            <TextView
                android:text="0000.0 m"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/distance"
                android:textColor="#000066"

                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textSize="24sp" />
            <TextView
                android:text="Distance"
                android:textColor="#000066"

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_distance"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@android:color/background_light">

            <TextView
                android:text="0"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/strokeCount"
                android:textColor="#000066"

                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textSize="24sp" />
            <TextView
                android:text="StrokNum"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#000066"

                android:textStyle="normal|bold"
                android:textSize="24sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light">

            <TextView
                android:text="000 str/min"
                android:textColor="#000066"

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/stroke_rate"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textSize="24sp" />
            <TextView
                android:text="Strokerate"
                android:gravity="center"
                android:textColor="#000066"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_stroke_rate"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light">
            <TextView
                android:text="00:00:00"
                android:textColor="#000066"

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/time"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textSize="24sp" />


            <TextView
                android:text="Time"
                android:gravity="center"
                android:textColor="#000066"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_time"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light">

            <TextView
                android:text="0"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/angle"
                android:textColor="#000066"

                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="normal|bold" />
            <TextView
                android:text="angle"
                android:gravity="center"
                android:textColor="#000066"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="normal|bold" />
        </LinearLayout>
    </LinearLayout>
    <com.jjoe64.graphview.GraphView
        android:text="acceleration"
        android:layout_margin="3dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/acceleration_graph"
        android:layout_weight="2"
        android:background="@android:color/background_light" />

</LinearLayout>